<%# obj is generic object passed into this form to show error messages %>
<% if !obj.nil? && obj.errors.any? %>
<div>
    <p><%= "Error".pluralize(obj.errors.count) %>:</p>
    <ul>
        <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>